<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ca.alexlockhart.a3.activity.DetailActivity">

    <ImageView
        android:id="@+id/detail_icon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/climacons_sun"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/detail_icon"
        android:layout_alignStart="@+id/detail_icon"
        android:layout_centerVertical="true"
        android:text="TextView" />

    <TextView
        android:id="@+id/detail_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/detail_title"
        android:layout_alignStart="@+id/detail_title"
        android:layout_alignTop="@+id/detail_title"
        android:layout_marginTop="47dp"
        android:text="TextView" />
</RelativeLayout>
